{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"downlevelIteration": true /* Emit more compliant, but verbose and less performant JavaScript for iteration. */,
		"baseUrl": "./",
		"paths": {
			"@data/*": ["data/*"],
			"@coreComponents/*": ["components/core/*"],
			"@commonComponentsDependent/*": ["components/common/dependent/*"],
			"@commonComponentsIndependent/*": ["components/common/independent/*"],
			"@coreLib/*": ["libs/core/*"],
			// "@commonLib/*": ["libs/common/*"],
			"@commonLibDependent/*": ["libs/common/dependent/*"],
			"@commonLibIndependent/*": ["libs/common/independent/*"],
			"@screens/*": ["screens/*"],
			"@nextAPIs/*": ["nextAPIs/*"],
			"@styles/*": ["styles/*"],
			"@store/*": ["store/*"]
		}
		// "plugins": ["@typescript-eslint", "react-hooks", "react"]
	},
	"rules": {
		// 	"no-unused-vars": [1, { "args": "after-used", "argsIgnorePattern": "^_" }]
		// "@typescript-eslint/no-unused-vars": ["error"],
		// "noUnusedLocals": true,
		// "noUnusedParameters": true
		"no-unused-vars": "off",
		"@typescript-eslint/no-unused-vars": [
			1,
			{ "args": "after-used", "argsIgnorePattern": "^_" }
		],
		"require-await": "off",
		"@typescript-eslint/require-await": 1,
		"no-extra-semi": "off",
		"@typescript-eslint/no-extra-semi": [1]
		// "no-extra-parens": "off",
		// "@typescript-eslint/no-extra-parens": ["error"]
		// "brace-style": "off",
		// "@typescript-eslint/brace-style": ["error"]
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
	"exclude": [
		"node_modules",
		"___",
		"**/___/*",
		"**/___/*.ts",
		"**/___/*.tsx",
		"___deprecated",
		"___old"
	]
}
